<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/style/dashboard.css">
    <script>
        function confirmDelete(event, form) {
            event.preventDefault();
            if (confirm('Are you sure you want to delete this item?')) {
                form.submit();
            }
        }
    </script>
</head>
<body>
    <header>
        <h2 class="dashboard-title">Dashboard Admin</h2>
        <form action="/dashboard/logout" method="post">
            <input type="submit" value="Logout" class="logout-button">
        </form>
    </header>

    <main>
        <section>
            <h3>Data Form</h3>

            <!-- Form for filter and search -->
            <div class="filter-search-container">
                <form action="/dashboard" method="get" class="filter-form">
                    <label for="meetingDate">Filter by Date:</label>
                    <input type="date" id="meetingDate" name="meetingDate" value="<%= meetingDate %>">
                    <input type="submit" value="Filter" class="filter-button">
                </form>
                <form action="/dashboard" method="get" class="search-form">
                    <label for="name">Search by Name:</label>
                    <input type="text" name="name" id="name" placeholder="Enter Name">
                    <input type="submit" value="Search" class="search-button">
                </form>
                <form action="/dashboard/export" method="get" class="export-form">
                    <input type="hidden" name="meetingDate" value="<%= meetingDate %>">
                    <input type="hidden" name="name" value="<%= name %>">
                    <input type="submit" value="Export to Excel" class="export-button">
                </form>
            </div>

            <!-- Table to display form data -->
            <div class="table-respon">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nama</th>
                            <th>Jenis Kelamin</th>
                            <th>Telepon</th>
                            <th>Tanggal Lahir</th>
                            <th>Alamat</th>
                            <th>Email</th>
                            <th>Keluhan</th>
                            <th>Tanggal Pertemuan</th>
                            <th>Nama Dokter</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(form => { %>
                            <tr>
                                <td><%= form.idform %></td>
                                <td><%= form.name %></td>
                                <td><%= form.gender %></td>
                                <td><%= form.phone %></td>
                                <td><%= form.birthdate %></td>
                                <td><%= form.address %></td>
                                <td><%= form.email %></td>
                                <td><%= form.complain %></td>
                                <td><%= form.meetingDate %></td>
                                <td><%= form.nama_dokter %></td>
                                <td class="actions">
                                    <form action="/dashboard/update/<%= form.idform %>?_method=PUT" method="post">
                                        <button type="submit" class="update-button">Update</button>
                                    </form>
                                    <form action="/dashboard/delete/<%= form.idform %>?_method=DELETE" method="post" onsubmit="confirmDelete(event, this)">
                                        <button type="submit" class="delete-button">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
</body>
</html>
